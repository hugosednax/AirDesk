<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#3fa9f5"
    tools:context="pt.ulisboa.tecnico.cmov.airdesk.Activity.WorkspaceCreateActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/nameWorkspace"
        android:layout_marginBottom="89dp"
        android:layout_above="@+id/quotaWorkspace"
        android:layout_alignLeft="@+id/quotaWorkspace"
        android:layout_alignStart="@+id/quotaWorkspace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quota"
        android:id="@+id/quotaWorkspace"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/isPublicCheckBox"
        android:layout_alignStart="@+id/isPublicCheckBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public Workspace"
        android:id="@+id/isPublicCheckBox"
        android:layout_above="@+id/createWorkspaceButton"
        android:layout_alignLeft="@+id/createWorkspaceButton"
        android:layout_alignStart="@+id/createWorkspaceButton"
        android:layout_marginBottom="41dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="create Workspace"
        android:id="@+id/createWorkspaceButton"
        android:onClick="createWorkspace"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameInput"
        android:layout_alignTop="@+id/nameWorkspace"
        android:layout_alignRight="@+id/createWorkspaceButton"
        android:layout_alignEnd="@+id/createWorkspaceButton"
        android:layout_toRightOf="@+id/nameWorkspace"
        android:layout_toEndOf="@+id/nameWorkspace" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/quotaInput"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/nameInput"
        android:layout_alignStart="@+id/nameInput" />

</RelativeLayout>

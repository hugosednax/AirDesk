<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#BBCDE3"
    tools:context="pt.ulisboa.tecnico.cmov.airdesk.Activity.WorkspaceTypeActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owned Workspaces"
        android:id="@+id/ownedWorkspacesButton"
        android:onClick="switchToOwnedActivity"
        android:layout_marginTop="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#3FA9F5"
        android:textColor="#ffffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="foreign Workspaces"
        android:id="@+id/foreignWorkspacesButton"
        android:onClick="switchToForeignActivity"
        android:layout_below="@+id/ownedWorkspacesButton"
        android:layout_alignLeft="@+id/ownedWorkspacesButton"
        android:layout_alignStart="@+id/ownedWorkspacesButton"
        android:layout_marginTop="39dp"
        android:layout_alignRight="@+id/ownedWorkspacesButton"
        android:layout_alignEnd="@+id/ownedWorkspacesButton"
        android:background="#3FA9F5"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Settings"
        android:id="@+id/button"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/foreignWorkspacesButton"
        android:layout_alignLeft="@+id/foreignWorkspacesButton"
        android:layout_alignStart="@+id/foreignWorkspacesButton"
        android:layout_alignRight="@+id/foreignWorkspacesButton"
        android:layout_alignEnd="@+id/foreignWorkspacesButton"
        android:background="#3FA9F5"
        android:textColor="#ffffffff"
        android:onClick="goToUserSettings" />

</RelativeLayout>

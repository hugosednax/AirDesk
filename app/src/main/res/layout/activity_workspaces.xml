<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pt.ulisboa.tecnico.cmov.airdesk.Activity.Workspaces">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owned Workspaces"
        android:id="@+id/ownedWorkspacesButton"
        android:layout_marginTop="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="foreign Workspaces"
        android:id="@+id/foreignWorkspacesButton"
        android:layout_below="@+id/ownedWorkspacesButton"
        android:layout_alignLeft="@+id/ownedWorkspacesButton"
        android:layout_alignStart="@+id/ownedWorkspacesButton"
        android:layout_marginTop="39dp"
        android:layout_alignRight="@+id/ownedWorkspacesButton"
        android:layout_alignEnd="@+id/ownedWorkspacesButton" />

</RelativeLayout>

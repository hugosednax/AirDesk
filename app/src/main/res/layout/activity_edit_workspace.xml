<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#BBCDE3"
    tools:context="pt.ulisboa.tecnico.cmov.airdesk.Activity.WorkspaceEditActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/newQuotaInput"
        android:layout_marginTop="56dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignRight="@+id/privClientList"
        android:layout_alignEnd="@+id/privClientList" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="New Quota"
        android:id="@+id/newQuota"
        android:textColor="#AAAAAA"
        android:layout_alignBottom="@+id/newQuotaInput"
        android:layout_toLeftOf="@+id/ConfirmEdit"
        android:layout_toStartOf="@+id/ConfirmEdit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Previliged Clients"
        android:id="@+id/textView2"
        android:layout_below="@+id/newQuotaInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="69dp"
        android:textColor="#AAAAAA"
        android:layout_marginRight="20dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/privClientList"
        android:choiceMode="singleChoice"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginBottom="90dp"
        android:longClickable="true"
        android:smoothScrollbar="true"
        android:stackFromBottom="false"
        android:background="#F0F0F0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/ConfirmEdit"
        android:onClick="ConfirmChanges"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#3FA9F5"
        android:textColor="#ffffffff" />
</RelativeLayout>
